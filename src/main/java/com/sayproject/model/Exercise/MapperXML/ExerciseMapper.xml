<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sayproject.model.Exercise.MapperXML.ExerciseMapper">
    <!-- Member 테이블을 사용한 SQL 에 대한 실행 문장들을 정리하는 파일 -->
    <select id="exerciseList" resultType="com.sayproject.model.Exercise.ExerciseMaria">
      Select kakao_id, name, age, gender, height, weight, trainer, photopath, job, address, regist_day, phone_number From members
   </select>
   
   <!-- 회원정보 -->
   <select id="info" parameterType="com.sayproject.model.Exercise.MemberInfo" resultType="com.sayproject.model.Exercise.MemberInfo">
      select name, regist_day, gender, age, weight, height, phone_number, expiration_day, schedule from members where name=#{name}
   </select>
   
   <!--MET가져오기-->
   <select id=" met" parameterType="com.sayproject.model.Exercise.Exercise" resultType="float">
      Select MET from EXERCISE_INFO WHERE EXERCISE_NAME=#{name};
   </select>

   <!--만기일
   <select id="expiration" parameterType="String" resultType="com.sayproject.model.Exercise.MemberInfo">
      select expiration_day from members where name=#{name}
   </select>-->
</mapper>